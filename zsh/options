unsetopt beep
unsetopt hist_beep
unsetopt list_beep
unsetopt correct_all  # disable autocorrect

# History
HISTFILE=~/.zsh_history         # where to store zsh history
setopt append_history           # append
setopt hist_ignore_all_dups     # no duplicate
unsetopt hist_ignore_space      # ignore space prefixed commands
setopt hist_reduce_blanks       # trim blanks
setopt hist_verify              # show before executing history commands
setopt inc_append_history       # add commands as they are typed, don't wait until shell exit 
setopt share_history            # share hist between sessions
setopt bang_hist                # !keyword
setopt share_history            # share hist between sessions
setopt interactivecomments  # allow to put a pound at beginning of line to comment a line
export HISTORY=5000
export SAVEHIST=5000

# Completions
# format all messages not formatted in bold prefixed with ----
zstyle ':completion:*' format '%B---- %d%b'
# format descriptions (notice the vt100 escapes)
zstyle ':completion:*:descriptions'    format $'%{\e[0;31m%}completing %B%d%b%{\e[0m%}'
# bold and underline normal messages
zstyle ':completion:*:messages' format '%B%U---- %d%u%b'
# format in bold red error messages
zstyle ':completion:*:warnings' format "%B$fg[red]%}---- no match for: $fg[white]%d%b"

# activate menu selection
zstyle ':completion:*' menu select

fpath=(~/.zsh/completions $fpath)
autoload -Uz compinit && compinit

autoload -U promptinit
promptinit
