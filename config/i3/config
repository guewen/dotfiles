# Make the currently focused window a scratchpad
bindsym $mod+Shift+m move scratchpad

# Show the first scratchpad window
bindsym $mod+m scratchpad show

bindsym $mod+y exec "~/.bin/audioswitch"

bindsym $mod+u exec xclip -selection clipboard -o | qrencode -o ~/.qr.png; exec feh -FZ ~/.qr.png

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#bindsym XF86AudioRaiseVolume exec --no-startup-id "~/.i3/scripts/volnoti-volume.sh up"
#bindsym XF86AudioLowerVolume exec --no-startup-id "~/.i3/scripts/volnoti-volume.sh down"
#bindsym XF86AudioMute exec --no-startup-id "~/.i3/scripts/volnoti-volume.sh toggle"
#bindsym XF86AudioPlay exec clementine --play-pause
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Prev

